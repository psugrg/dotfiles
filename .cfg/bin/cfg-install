#!/bin/sh

if [ -z "$@" ]
then
  REPO=https://github.com/psugrg/dotfiles.git
else
  REPO=$@
fi

echo Cloning $REPO

git clone --bare $REPO $HOME/.cfg
function config {
   /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME $@
}
mkdir -p .config-backup
config checkout -f
config config status.showUntrackedFiles no
